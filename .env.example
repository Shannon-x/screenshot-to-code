# Example environment variables for backend and frontend

############################
# Backend (.env)
############################
# OpenAI API key with GPT-vision access
OPENAI_API_KEY=sk-<your-openai-api-key>
# (Optional) Anthropic API key
ANTHROPIC_API_KEY=an-<your-anthropic-api-key>
# (Optional) Custom OpenAI Base URL (e.g., proxy)
OPENAI_BASE_URL=https://api.openai.com/v1
# (Optional) Replicate API key for image generation
REPLICATE_API_KEY=rp-<your-replicate-api-key>
# Set to true to use mock mode in backend
MOCK=false

############################
# Frontend (.env.local)
############################
# Backend HTTP endpoint for API and screenshot
VITE_HTTP_BACKEND_URL=http://localhost:7001
# Backend WS endpoint (will default to ws:// or wss:// based on HTTP_URL)
VITE_WS_BACKEND_URL=ws://localhost:7001
# Set to true if deployed behind HTTPS (will affect WebSocket protocol)
VITE_IS_DEPLOYED=false
